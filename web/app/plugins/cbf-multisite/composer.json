{
	"name": "author-slug/cbf-multisite",
	"description": "This is a short description of what the plugin does. It's displayed in the WordPress admin area.",
	"homepage": "http://example.com/",
	"type": "wordpress-plugin",
	"keywords": [],
	"license": "GPL-2.0-or-later",
	"require": {
		"php": ">=7.3"
	},
	"require-dev": {
		"composer/installers": "^2.3",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.1",
		"woocommerce/woocommerce-sniffs": "^1.0",
		"wp-coding-standards/wpcs": "^3.2"
	},
	"autoload": {
		"psr-4": {
			"CodingBlackFemales\\Multisite\\": "includes/"
		}
	},
	"config": {
		"platform": {
			"php": "7.3.0"
		},
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"phpcs": [
			"phpcs . --ignore=vendor,node_modules,assets --extensions=php -s -p"
		],
		"phpcbf": [
			"phpcbf . --ignore=vendor,node_modules,assets --extensions=php -p"
		],
    "post-install-cmd": [
      "npm install || true"
    ]
	},
	"extra": {
		"scripts-description": {
			"phpcs": "Analyze code against the WordPress coding standards with PHP_CodeSniffer",
			"phpcbf": "Fix coding standards warnings/errors automatically with PHP Code Beautifier"
		}
	}
}
